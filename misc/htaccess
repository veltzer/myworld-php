# BEGIN WordPress
<IfModule mod_rewrite.c>
RewriteEngine On
# the next rule is for wordpress and means that any uri which is not found on the file system
# (could be a resource) should be redirected to the blog. But the URI must start with blog (my
# addition).
RewriteBase /
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} ^/blog/
RewriteRule . /blog/index.php [L]
# this means that if anyone comes to the root of my site he will be redirected to blog...
RedirectMatch ^/$ /blog/
</IfModule>
# END WordPress

# This is for being able to upload big files to php
php_value upload_max_filesize 20M
php_value post_max_size 20M
php_value max_execution_time 200
php_value max_input_time 200
